general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "ethernet enp0s31f6"
order += "tztime local"

run_watch DHCP {
  pidfile = "/var/run/dhclient/*.pid"
}

ethernet enp0s31f6 {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

tztime local {
  format = "%Y-%m-%d %k:%M (%a)"
  locale = "ja_JP.UTF-8"
}
