[alias]
  lol = log --pretty=format:'%C(yellow)%h%C(reset) %C(green)%cr%C(reset) %C(blue)%cn%C(reset) %C(yellow)%d%C(reset) %s'
  logstats = log --pretty=format:'%C(yellow)%h%C(reset) %C(green)%cr%C(reset) %C(blue)%cn%C(reset): %s' --stat
  vimdiff = difftool
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[diff]
  mnemonicprefix = true
  tool = vimdiff
[merge]
  stat = true
[push]
  default = simple
[rebase]
  autosquash = true
[user]
  name = Chris Bracken
  email = chris@bracken.jp
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
[grep]
  lineNumber = true
