# .colors
#
# 0x=normal, 1x=bold, 4x=underline, 5x=blink, 7x=inverse
# 0=black, 1=red, 2=green, 3=yellow, 4=blue, 5=magenta, 6=cyan, 7=white

# Colour support for less.
export LESS_TERMCAP_mb=$'\E[01;31m'    # begin blinking
export LESS_TERMCAP_md=$'\E[01;31m'    # begin bold
export LESS_TERMCAP_me=$'\E[0m'        # end blinking, bold
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin standout
export LESS_TERMCAP_se=$'\E[0m'        # end standout
export LESS_TERMCAP_us=$'\E[04;32m'    # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # end underline
