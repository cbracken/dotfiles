# -*- mode: shell-script; -*- vim: set filetype=sh
# ~/.paths

# add to path if not already there
path_remove() {
  PATH=$(echo $PATH | sed "s:$1::;s/::/:/;s/:$//")
}

path_prepend() {
  path_remove "$1"
  if [ -d "$1" ]; then
    export PATH="$1:$PATH"
  fi
}

path_append() {
  path_remove "$1"
  if [ -d "$1" ]; then
    export PATH="$PATH:$1"
  fi
}

# Chromium and Dart development
path_prepend "$HOME/.pub-cache/bin"
path_prepend "$HOME/src/depot_tools"
path_prepend "$DART_SDK/bin"

# Push /usr/local/bin to the front of PATH
path_prepend "/usr/local/bin"
path_prepend "/usr/homebrew/bin"
path_prepend "/usr/homebrew/opt/coreutils/libexec/gnubin"

# User's personal bin dir if it exists
path_prepend "$HOME/bin"
